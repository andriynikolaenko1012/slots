<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.slot.top.top_slots">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.slot.top.top_slots.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_app"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_app_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.slot.top.top_slots.game.MainActivity"
                  android:noHistory="true"
                  android:screenOrientation="landscape"
                  android:theme="@style/AppTheme2">
        </activity>

        <activity
                android:name="com.slot.top.top_slots.activity.SplashActivity"
                android:theme="@style/SplashTheme"
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                android:noHistory="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
                android:name="com.slot.top.top_slots.activity.WebviewActivity"
                android:theme="@style/AppTheme3"
                android:label="@string/app_name"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
                android:windowSoftInputMode="adjustResize">
        </activity>

    </application>

</manifest>